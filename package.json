{
  "name": "typescript-ddd-forum",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build:public": "cd public/app && npm run build",
    "start:public": "cd public/app && npm run start",
    "build": "rimraf ./build && tsc",
    "db:create:dev": "cross-env NODE_ENV=development node scripts/db/create",
    "db:create:test": "cross-env NODE_ENV=test node scripts/db/create",
    "db:delete:dev": "cross-env NODE_ENV=development node scripts/db/delete",
    "db:delete:test": "cross-env NODE_ENV=test node scripts/db/delete",
    "db:flush:dev": "cross-env NODE_ENV=development npm run db:delete:dev && npm run db:create:dev",
    "db:flush:test": "cross-env NODE_ENV=test npm run db:delete:test && npm run db:create:test",
    "migrate:dev": "npm run build && cross-env NODE_ENV=development dotenv -e .env sequelize db:migrate",
    "migrate:test": "npm run build && cross-env NODE_ENV=test dotenv -e .env sequelize db:migrate --env test",
    "migrate:prod": "sequelize db:migrate --env production",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start:both": "concurrently --kill-others-on-fail \"npm run start:dev\" \"npm run  start:public\"",
    "prestart": "npm run migrate:prod",
    "start": "node build/index.js",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "ts:lint": "eslint . --ext .ts --fix",
    "ts:prettier": "prettier --write \"**/*.ts\"",
    "ts:format": "npm run ts:lint && npm run ts:prettier",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dyarleniber/typescript-ddd-forum.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dyarleniber/typescript-ddd-forum/issues"
  },
  "homepage": "https://github.com/dyarleniber/typescript-ddd-forum#readme",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.141",
    "@types/node": "^16.7.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "concurrently": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^1.19.3",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "lint-staged": {
    "*.ts": "npm run ts:format"
  },
  "dependencies": {
    "apollo-server-express": "^2.11.0",
    "axios": "^0.19.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dompurify": "^2.0.6",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "graphql-iso-date": "^3.6.1",
    "helmet": "^3.21.1",
    "jsdom": "^15.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "mysql2": "^1.7.0",
    "rand-token": "^0.4.0",
    "react-quill": "^1.3.3",
    "redis": "^2.8.0",
    "sequelize": "^5.19.2",
    "sequelize-cli": "^5.5.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "slug": "^1.1.0",
    "uuid": "^8.3.2",
    "validator": "^11.1.0"
  }
}
